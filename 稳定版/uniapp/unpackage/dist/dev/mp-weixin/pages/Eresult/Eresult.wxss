.headtext {
  position: absolute;
  top: 30rpx;
  left: 50rpx;
  font-weight: bold;
}
.route_image_box {
  border-radius: 20px;
  box-sizing: border-box;
  margin-top: 10rpx;
  padding-right: 40rpx;
}
.route_image_box .route_image {
  border-radius: 20px;
  width: 100%;
  height: 100%;
}
.resultBox {
  margin: auto;
  text-align: center;
  padding: 40rpx;
  border-radius: 40rpx;
  padding-top: 40rpx;
  border: 10rpx double #026B7A;
  padding-bottom: 40rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.resultBox .resultBox_item .result_text {
  color: #c75f00;
  font-family: 华文宋体, STSong, serif;
  font-size: 20px;
}
.resultBox .resultBox_item .resultBox_if .jiantou {
  height: 100rpx;
}
.resultBox .start {
  margin-bottom: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  /* 水平居中 */
  align-items: center;
  /* 垂直居中 */
}
.resultBox .start .start_text {
  font-weight: bold;
  color: #FFCB00;
}
.resultBox .end {
  margin-top: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  /* 水平居中 */
  align-items: center;
  /* 垂直居中 */
}
.resultBox .end .end_text {
  font-weight: bold;
  color: #0F4FA8;
}
.resultBox .result_dist {
  margin-bottom: 20rpx;
}
.resultBox .result_dist .result_dist_text {
  font-weight: bold;
}

