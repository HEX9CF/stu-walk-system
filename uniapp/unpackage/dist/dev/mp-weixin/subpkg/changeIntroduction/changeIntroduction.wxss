.shurukuang {
  top: 10rpx;
  width: 100%;
  padding: 10rpx;
  display: flex;
  flex-direction: column;
}
.shurukuang .shurukuang-textarea {
  width: 92%;
  height: 320rpx;
  background-color: #f0f0f0;
  border-radius: 10rpx;
  padding: 20rpx;
}
.zishu {
  text-align: right;
  align-items: center;
  display: flex;
  padding: 20rpx;
  padding-top: 20rpx;
}
.zishu .zishu-text {
  font-size: 24rpx;
  color: #646464;
}
.zishu .zishu-button {
  border-radius: 40rpx;
  background-color: #ADD8E6;
  display: flex;
  align-items: center;
  padding: 20rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  position: absolute;
  right: 15rpx;
}
.zishu .zishu-button .zishu-button-text {
  color: white;
  font-size: 15px;
  font-family: 黑体, STSong, serif;
