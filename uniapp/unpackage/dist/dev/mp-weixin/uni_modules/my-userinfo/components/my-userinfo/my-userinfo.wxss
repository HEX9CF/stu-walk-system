.body {
  margin: auto;
  margin-top: 50rpx;
  padding: 25rpx;
  padding-left: 55rpx;
  padding-right: 55rpx;
  padding-top: 40rpx;
  z-index: 999;
  border-radius: 15px;
  width: 89%;
  box-sizing: border-box;
  background-color: white;
}
.body .body-geRenXinXi {
  display: flex;
  justify-content: space-between;
  padding: 10rpx;
  border-bottom: 2px solid #F8F8FA;
