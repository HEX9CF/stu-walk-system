.head {
  display: flex;
  width: 89%;
  margin: auto;
  background-color: white;
  margin-top: 50rpx;
  height: 250rpx;
  border-radius: 15px;
  align-items: center;
}
.head .head_hd {
  width: 140rpx;
  margin-left: 40rpx;
}
.head .head_box {
  display: flex;
  flex-direction: column;
  margin-left: 40rpx;
}
.head .head_box .head_box_text1 {
  font-family: "黑体", SimSun, "Arial", sans-serif;
  font-weight: bold;
  font-size: 22px;
