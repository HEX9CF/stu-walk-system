.textBox {
  display: flex;
  flex-direction: column;
  background-color: white;
  width: 80%;
  margin: auto;
  padding: 40rpx;
  border-radius: 40rpx;
  padding-top: 40rpx;
  border: 10rpx double #026B7A;
  padding-bottom: 40rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.textBox .titleBox {
  text-align: center;
  margin-bottom: 30rpx;
}
.textBox .titleBox .title {
  color: #c75f00;
  font-size: large;
  font-weight: bold;
}
.textBox .first {
  margin-bottom: 20rpx;
  color: #026b7a;
  font-family: 华文宋体, STSong, serif;
