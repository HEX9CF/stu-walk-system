.chatBox {
  display: flex;
  flex-direction: column;
  padding: 15rpx;
  margin-left: 10rpx;
  border-bottom: #f7f7f7 solid 4rpx;
  position: relative;
  box-sizing: border-box;
}
.chatBox .head {
  display: flex;
  align-items: center;
}
.chatBox .head .name_date {
  display: flex;
  flex-direction: column;
  margin-left: 15rpx;
}
.chatBox .head .name_date .head-name {
  font-size: 14px;
}
.chatBox .head .name_date .head-date {
  font-size: 10px;
  color: gray;
  margin-top: 15rpx;
}
.chatBox .head .head-image {
  border-radius: 50px;
  width: 100rpx;
  height: 100rpx;
  border: solid 2px #f7f7f7;
  box-sizing: border-box;
}
.chatBox .content {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  font-size: 15px;
}
.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 300rpx;
}
.empty-cart .empty-img {
  width: 300rpx;
  height: 300rpx;
}
.empty-cart .tip-text {
  font-size: 12px;
  color: gray;
  margin-top: 15px;
}
.bottomIcon {
  display: flex;
  justify-content: space-between;
  padding-right: 30rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}
.bottomIcon .icon-text {
  font-size: 13px;
  color: gray;
}
.bottomIcon .Icon .deleteIcon {
  width: 32rpx;
  height: 32rpx;
}
.bottomIcon .Icon .goto {
  width: 32rpx;
  height: 32rpx;
  margin-right: 50rpx;
}

