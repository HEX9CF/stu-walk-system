.head {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  padding: 20rpx;
  padding-top: 100rpx;
  box-sizing: border-box;
}
.head .headpic {
  width: 200rpx;
  height: 200rpx;
  border-radius: 100px;
  margin: auto;
}
.head .headtext {
  font-size: 15px;
  margin-top: 20rpx;
  color: gray;
}
